{
    "[html]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.codeActionsOnSave": [
        "source.formatDocument",
        "source.fixAll.eslint"
      ],
      "editor.formatOnSave": false
    },
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.codeActionsOnSave": [
        "source.formatDocument",
        "source.fixAll.eslint"
      ],
      "editor.formatOnSave": false
    },
    "editor.tabSize": 2,
    "editor.fontFamily": "'Fira Code', monospace",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "'Fira Code', monospace",
    "terminal.integrated.customGlyphs": true,
    "terminal.integrated.profiles.windows": {
      "Terminal": {
        "source": "Git Bash",
        "icon": "terminal",
        "color": "terminal.ansiBlue"
      }
    },
    "terminal.integrated.defaultProfile.windows": "Terminal",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "workbench.colorCustomizations": {
      "activityBar.activeBackground": "#4d1500",
      "activityBar.background": "#4d1500",
      "activityBar.foreground": "#e7e7e7",
      "activityBar.inactiveForeground": "#e7e7e799",
      "activityBarBadge.background": "#008023",
      "activityBarBadge.foreground": "#e7e7e7",
      "commandCenter.border": "#e7e7e799",
      "sash.hoverBorder": "#4d1500",
      "statusBar.background": "#1a0700",
      "statusBar.foreground": "#e7e7e7",
      "statusBarItem.hoverBackground": "#4d1500",
      "statusBarItem.remoteBackground": "#1a0700",
      "statusBarItem.remoteForeground": "#e7e7e7",
      "titleBar.activeBackground": "#1a0700",
      "titleBar.activeForeground": "#e7e7e7",
      "titleBar.inactiveBackground": "#1a070099",
      "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#1a0700"
  }
